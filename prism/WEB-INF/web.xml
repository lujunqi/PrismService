<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<welcome-file-list>
		<welcome-file>index.do</welcome-file>
	</welcome-file-list>
	<!-- 数据库配置的 -->
	<resource-ref>
		<description>connectDB hcibe</description>
		<res-ref-name>jdbc/connectDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<!-- spring日志 -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>1800000</param-value>
	</context-param>

	<servlet>
		<servlet-name>PrismAction</servlet-name>
		<servlet-class>com.prism.action.PrismAction</servlet-class>
		<load-on-startup>1</load-on-startup>

	</servlet>
	<servlet-mapping>

		<servlet-name>PrismAction</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PrismAction2</servlet-name>
		<servlet-class>com.prism.action.PrismActionEx</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>PrismAction2</servlet-name>
		<url-pattern>/pa/*</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>basePath</param-name>
		<param-value>e:/temp/</param-value>
	</context-param>

</web-app>
